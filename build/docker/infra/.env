# Database Environment Configuration for iam contracts System
# 数据库环境配置文件

# MySQL配置
MYSQL_ROOT_PASSWORD=web_root_2024
MYSQL_DATABASE=web_framework
MYSQL_USER=web_app_user
MYSQL_PASSWORD=web_app_password_2024
MYSQL_PORT=3306
MYSQL_CONTAINER_NAME=web-mysql
MYSQL_IMAGE_NAME=web-mysql:latest

# Redis配置
REDIS_PASSWORD=web_redis_2024
